# Backend Environment Variables (.env)
# Copy this to .env and fill in your values

# Database
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET="your-secure-random-string-here"

# Stripe Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_test_..." # Use sk_live_... for production
STRIPE_WEBHOOK_SECRET="whsec_..." # Get from Stripe webhook settings

# Frontend URL (for CORS)
CLIENT_URL="http://localhost:3000" # Change to your Vercel URL in production

# Server Port
PORT=5000

# Environment
NODE_ENV="development" # Change to "production" for deployment

# Email Configuration (for notifications)
EMAIL_USER="your-email@gmail.com" # Your Gmail or SMTP username
EMAIL_PASS="your-app-password" # Gmail App Password or SMTP password
# For Gmail: Enable 2FA and generate App Password
# For testing: Use Ethereal (https://ethereal.email/create)
